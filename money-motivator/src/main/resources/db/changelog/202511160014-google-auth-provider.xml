<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="202511160014-1" author="vyavorskyi">
        <addColumn tableName="t_user">
            <column name="provider" type="varchar(50)"/>
            <column name="provider_id" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="202511160014-2" author="vyavorskyi">
        <update tableName="t_user">
            <column name="provider" value="LOCAL"/>
            <where>provider IS NULL</where>
        </update>
    </changeSet>

    <changeSet id="202511160014-3" author="vyavorskyi">
        <addNotNullConstraint tableName="t_user" columnName="provider"/>
    </changeSet>

    <changeSet id="202511160014-4" author="vyavorskyi">
        <dropNotNullConstraint tableName="t_user" columnName="password"/>
    </changeSet>

</databaseChangeLog>
